{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "jest":   true
  },
  "plugins": [
    "react"
  ],
  "extends": ["standard", "standard-react"],
  "rules": {
    "space-before-function-paren": ["error", "never"],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "jsx-quotes": [2, "prefer-double"]
  }
}
